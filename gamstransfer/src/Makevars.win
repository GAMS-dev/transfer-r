CXX = clang++
CXX_STD = CXX17
PKG_CPPFLAGS = -I./gdx/src -I./gdx/src/gdlib -I./gdx/src/rtl -I.
PKG_CXXFLAGS = -DNDEBUG
PKG_LIBS = -ldl -lpthread -lz
SOURCES_CPP=./gdx/src/gdlib/gmsstrm.cpp ./gdx/src/gdlib/utils.cpp ./gdx/src/gxfile.cpp ./Read.cpp ./Write.cpp ./Utilities.cpp ./RcppExports.cpp
OBJECTS=$(SOURCES_CPP:.cpp=.o)

all: $(SHLIB)

# Provide recipe to remove all objects
clean:
	@rm -f $(OBJECTS)
